@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

    private Modal addT;

    private async Task OnShowModalClick()
    {
        await addT?.ShowAsync();
    }

    private async Task OnHideModalClick()
    {
        await addT?.HideAsync();
    }

}

@* Add Transaction popup *@
<Modal @ref="addT" Title="Add Transaction">
    <BodyTemplate> 
        Label:
        <input type="text" class="mt-2"/> <br>
        Amount (selected currency):
        <input type="text" class="mt-2"/> <br>
        Category:
        <input type="text" class="mt-2"/> <br>
    </BodyTemplate>
    <FooterTemplate>
        <Button Color="ButtonColor.Secondary" @onclick="OnHideModalClick">Add</Button>
        <Button Color="ButtonColor.Secondary" @onclick="OnHideModalClick">Cancel</Button>
    </FooterTemplate>
</Modal>


